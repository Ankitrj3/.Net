@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Product Service</h1>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <p>Welcome, @User.Identity.Name!</p>
        <p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">View Products</a>
        </p>
    }
    else
    {
        <p>Please login to manage products.</p>
        <p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
        </p>
    }
</div>
